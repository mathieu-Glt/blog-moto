<% if (session.isLogged === true ) { %>
  <p class="bienvenueUser">Bienvenue <%= session.user.firstName %> !</p>
<% } %>
<% if(session.isLogged === false) { %>
<p class="bienvenue">Bienvenue !</p>
<% } %>



<h1 id="#ancre" class="mainlyTitle">Bienvenue sur mon Blog Moto !</h1><br>
<h3 class="mainlyTitle">Bienvenu sur mon blog, voici une petite biographie de tous les meilleurs pilotes de la catégorie Moto GP!!!!</h3>
<br>
<figure>
    <audio
    controls="controls">
        <source src="bruit-de-moto.mp3" type="audio/mp3" 
        audio loop ="loop">
        <code>audio</code> element.
    </audio>
</figure>

<div id="carousel" class="carousel slide" data-bs-ride="carousel" data-interval="1000">
    <div class="carousel-indicators">
      <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
      <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
      <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
      <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="3" aria-label="Slide 3"></button>
      <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="4" aria-label="Slide 3"></button>

    </div>
    <div class="carousel-inner">
      <div class="carousel-item active">
        <img src="https://images.caradisiac.com/images/1/1/9/4/171194/S0-motogp-aragon-j-3-rossi-c-est-difficile-de-rester-motive-564115.jpg" class="d-block w-100 " alt="moto" style="width: 100px">
      </div>
      <div class="carousel-item">
        <img src="https://photos.motogp.com/2015/01/29/148885.big.jpg" class="d-block w-100 h-50" alt="moto">
      </div>
      <div class="carousel-item">
        <img src="https://www.gp-inside.com/layout/uploads/2020/09/valentino-rossi-fabio-quartararo-barcelone-motogp-2020-1.jpg" class="d-block w-100 " alt="moto" style="width: 100px">
      </div>
      <div class="carousel-item">
        <img src="https://www.gp-inside.com/layout/uploads/2019/07/quartararo-marquez-sachsenring-motogp-2019.jpg" class="d-block w-100 " alt="moto" style="width: 100px">
      </div>
      <div class="carousel-item">
        <img src="https://photos.motogp.com/2015/01/29/161299.big.jpg" class="d-block w-100 " alt="moto" style="width: 100px">
      </div>

    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Next</span>
    </button>
  </div>
<div class="posts">
    <ul class="home-list">
    
        <% for(let i=0; i < posts.length; i++) { %>
        <li>
          <div class="portrait">
            <img src="<%= posts[i].Portrait %>" width="80px"/>
          </div>
            <h2 class="title"><%= posts[i].Title %></h2>
            <p><%= posts[i].Contents %></p>
            <div class="container">
                <a class="buttonDetails" href="/post/<%=posts[i].id%>">Voir les détails de l'article</a>
              <% if(session.isLogged === true) {%>
                <a class="buttonDelete" href="/delete_post/<%=posts[i].id%>">Supprimer l'article</a>
              <% } %>
            </div>
        </li>
        <% } %>
        
    </ul>
    
</div>
<% if(session.isLogged === true) {%>

<div class="buttonCreate">
    <a class="buttonCreatePost" href="/add_post">Créer un article</a>
</div>
<% } %>

